{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "dependsOn": ["setup"],
          "cmds": ["curl -LsSf https://astral.sh/uv/install.sh | sh", "uv sync"]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "uv run fastmcp-server",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
